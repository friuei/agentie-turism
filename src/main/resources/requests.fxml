<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="650.0" style="-fx-background-color: #FFDBDB;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.Agent.RequestController">
   <children>
      <Button fx:id="seereviews" layoutX="263.0" layoutY="122.0" mnemonicParsing="false" onAction="#requestOnAction" text="See Requests" textFill="RED">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <TextField fx:id="username" layoutX="249.0" layoutY="183.0" promptText="Username" />
      <Text fx:id="usernametext" fill="#fc0000" layoutX="195.0" layoutY="265.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your username and press the button" textAlignment="RIGHT">
         <font>
            <Font size="14.0" />
         </font>
      </Text>
      <TextArea fx:id="requestarea" disable="true" layoutX="80.0" layoutY="36.0" prefHeight="318.0" prefWidth="487.0" visible="false" />
      <Button fx:id="accept" layoutX="208.0" layoutY="394.0" mnemonicParsing="false" onAction="#reviewsOnAction" text="Accept" textFill="RED" visible="false">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button fx:id="decline" layoutX="362.0" layoutY="394.0" mnemonicParsing="false" onAction="#reviewsOnAction" text="Decline" textFill="RED" visible="false">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
